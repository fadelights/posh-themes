{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "({{ .Venv }}) ",
          "foreground": "#ddffbb",
          "type": "python",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "<b>\uea71</b> ",
          "foreground": "#D75F00",
          "type": "exit",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#FFFFFF{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "<b>{{ .UserName }}</b> ",
          "foreground": "#ddffbb",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "in ",
          "foreground": "#aaff55",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "...",
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "template": "<b>{{ .Path }}</b> ",
          "foreground": "#88FF00",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "",
            "cache_duration": "none"
          },
          "template": "<#aaff55>git:(</><b>{{ .HEAD }}</b><#aaff55>)</> ",
          "foreground": "#ddffbb",
          "type": "git",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "<b>Î»</b> ",
          "foreground": "#D75F00",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3
}
